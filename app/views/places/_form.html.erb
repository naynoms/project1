<% @place = Place.new unless @place.present? %>
<%= form_for @place do |f| %>
  <% if @board.present? %>
    <%= f.hidden_field :board_id, :value => @board.id %>
  <% end %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :country %>
    <%= f.text_field :country, :class => 'form-control' %>
  </div>


  <%= f.submit :class => 'btn btn-default' %>
  <% end %>
