<h1>Edit Profile</h1>


<% if @user.errors.any? %>
  <ol>
    <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ol>
<% end %>

<%= form_for @user do |f| %>
<div class="form-group">
<%= f.label :first_name %>
<%= f.email_field :first_name, :required => true, :class => 'form-control' %>
</div>

<div class="form-group">
<%= f.label :second_name %>
<%= f.email_field :second_name, :required => true, :class => 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :email %>
  <%= f.email_field :email, :required => true, :class => 'form-control' %>
</div>

  <%= f.submit :class => 'btn btn-default'%>
<% end %>
